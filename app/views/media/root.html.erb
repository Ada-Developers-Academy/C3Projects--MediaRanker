<% @categorized_records.each do |category_group| %>
  <section class="category">
    <% category_name = category_group.shift() + "s" %>
    <% category_group.flatten! %>
    <% route_helper = category_name.downcase %>
    <h1>Top <%= category_name %></h1>
    <% category_group.each do |item| %>
      <h2><%= link_to "#{ item.title }", "/#{ route_helper }/#{ item.id }" %> <small>Ranking: <%= item.upvotes || 0 %></small></h2>
    <% end %>
    <%= link_to "View More #{ category_name }", "/#{ route_helper }" %>
  </section>
<% end %>
