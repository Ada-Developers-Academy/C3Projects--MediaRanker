<ol class="breadcrumb">
  <%= render partial: "all_media", locals: { active: false } %>
  <%= render partial: "category", locals: { active: false, name: "All #{ plural_display_name(@category) }" } %>
  <%= render partial: "medium", locals: { active: true, name: creator_phrase(@medium) } %>
</ol>

<div class="row">
  <div class="col-sm-7 col-sm-offset-2">
    <h2>
      <%= @medium.title %>
      <small><%= created_by(@medium) %></small>
    </h2>
  </div>
  <div class="col-sm-1">
    <%= link_to "Upvote", upvote_medium_path(@medium), method: :patch, class: "btn btn-info" %>
  </div>
</div>
<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <h4>
      Upvotes: <%= @medium.upvotes %>
    </h4>
  </div>
</div>
<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <blockquote>
      <p><%= @medium.description %></p>
    </blockquote>
    <%= link_to "Delete", "#{ @medium.id }", method: :delete, data: {
        confirm: "Are you sure you want to delete this record? This is permanent."},
        class: "btn btn-danger" %>
    <%= link_to "Edit #{ @medium.title }", edit_medium_path(@medium), class: "btn btn-default" %>
    <%= link_to "View All #{ plural_display_name(@medium.category) }", category_path(@medium.category), class: "btn btn-default" %>
    <%= link_to "View All Media", "/", class: "btn btn-default" %>
  </div>
</div>
