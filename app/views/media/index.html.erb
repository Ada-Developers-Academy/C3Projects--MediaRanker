<h1><%= @media.first.format.capitalize.pluralize %></h1>
<%= link_to "Create a new #{@media.first.format}", pick_new_path(@media.first), method: :get %>
<%= link_to "Home", root_path %>

<table>
  <tr>
    <th>Votes</th>
    <th>Name</th>
    <th>Upvote</th>
  </tr>
  <% @media.each do |media| %>
    <tr>
      <td>Number of Votes: <%= media.votes %></td>
      <td><%= media.name %></td>
      <td><%= link_to "Upvote", pick_upvote_path(media), method: :patch %>
    </tr>
  <% end %>



</table>