<ol class="breadcrumb">
  <%= render partial: "all_media", locals: { active: false } %>
  <%= render partial: "category", locals: { active: true, name: "All #{ plural_display_name(@category) }" } %>
</ol>

<div class="col-sm-5 col-sm-offset-3">
  <h2>All <%= plural_display_name(@category) %></h2>
</div>
<div class="col-sm-1">
  <%= link_to "Add New #{ display_name(@category) }", new_medium_path(@medium),
      title: "Add a new #{ display_name(@category) }!", class: "btn btn-default" %>
</div>
<div class="col-sm-6 col-sm-offset-3">
  <table class="table table-hover">
    <tr>
      <th>Ranking</th>
      <th>Name</th>
      <th>Upvote</th>
    </tr>
    <% @media.each do |medium| %>
      <tr>
        <td><%= medium.upvotes %></td>
        <td><%= link_to "#{ medium.title }", medium_path(medium) %></td>
        <td><%= link_to "Upvote", upvote_medium_path(medium), method: :patch, class: "btn btn-info" %></td>
      </tr>
    <% end %>
  </table>
</div>
<div class="col-sm-2">
</div>
