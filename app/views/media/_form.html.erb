<%= form_for @medium, url: "./" do |f| %>
  <div
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label @medium.creator_noun %>
  <%= f.text_field :creator %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.hidden_field :category, value: @medium.category %>

  <%= f.submit "Save" %>
<% end %>
