<%= render "shared/header" %>

<div class="index_column">
  <h1> Top Movies </h1>
  <% @movies.each do |movie| %>
    <h2> <%= link_to "#{movie.name}", "/movies/#{movie.id}" %>
      <small> ranked <%= movie.rank %> </small>
    </h2>
  <% end %>
</div>

