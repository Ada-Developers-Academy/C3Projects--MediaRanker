<div class="row">

  <div class="col-md-4">
    <h1> Top Movies </h1>
    <h2>
      <% Movie.top(10).collect do |movie| %>
         <%= link_to "#{movie.name}", "/movies/#{movie.id}" %>
         <small>Ranked: <%= movie.rank %></small>
         <% end %>
    </h2>
    <%= link_to "View More Movies", "/movies" %>
  </div>

  <div class="col-md-4">
    <h1> Top Books </h1>
    <h2>
      <% Book.top(10).collect do |book| %>
        <%= link_to "#{book.name}", "/books/#{book.id}" %> <small>Ranked: <%= book.rank %> </small>
        <% end %><
        <%= link_to "View More Books", "/books" %>
    </h2>
  </div>
  <div class="col-md-4">
    <h1> Top Albums </h1>

    <h2>
      <% Album.top(10).collect do |album| %>
        <%= link_to "#{album.name}", "/albums/#{album.id}" %> <small>  Ranked: <%= album.rank %> </small>
        <% end %>
        <%= link_to "View More Albums", "/albums" %>
    </h2>
  </div>
</div>
