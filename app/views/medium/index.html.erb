<div class="media">
  <h1>Top Books</h1>
  <% @books.each do |book| %>
    <h2><%= link_to book.name, book_path(book.id) %> votes: <%= book.vote %></h2>
  <% end %>
  <%= link_to "View all Books", books_path %>
</div>

