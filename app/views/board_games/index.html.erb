<h1>All Board Games</h1>
<table>
  <thead>
    <tr>
      <th>
        Rating
      </th>
      <th>
        Title
      </th>
      <th>
        Upvote
      </th>
    </tr>
  </thead>
  <tbody>
    <% @board_games.each do |game| %>
    <tr>
      <td>
        <%= game.meeples %>
      </td>
      <td>
        <%= link_to "#{game.title}", board_game_path(game.id)  %>
      </td>
      <td>
        Upvote
      </td>
    </tr>
    <% end  %>
  </tbody>
</table>

<%= link_to "View All Games", welcomes_path %>
<%= link_to "Add a Board Game", new_board_game_path %>
