<table>
  <th>Top Movies</th>
  <% @movies.each do |movie| %>
    <tr>
      <td><%= link_to "#{movie.name}", movie_path(movie.id) %></td>
      <td><%= movie.rank %></td>
    </tr>
  <% end %>
</table>
