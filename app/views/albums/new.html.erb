<%= render :partial => "shared/header"  %>

<%= form_for @album, url: albums_path("#{params[@album.id]}") do |f| %>
    <legend>New Album</legend>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :artist %>
    <%= f.text_field :artist %>

    <%= f.label :description %>
    <%= f.text_area :description %>

 <%= f.submit 'Save' %>
<% end %>
