<%= form_for @album do |f| %>

<fieldset>
  <legend>Album Details</legend>
  <%= f.label :name, "Name: " %>
  <%= f.text_field :name, :required => true %>

  <%= f.label :artist, "Artist: " %>
  <%= f.text_field :artist %>

  <%= f.label :description, "Description: " %>
  <%= f.text_field :description %>

  <%= f.label :rank, "Rank: " %>
  <%= f.number_field :rank %>

</fieldset>
  <%= f.submit 'Add Album' %>
<% end %>
