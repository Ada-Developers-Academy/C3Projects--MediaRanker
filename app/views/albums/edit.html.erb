<%= render :partial => "shared/header"  %>

<%= form_for @album, url: album_path(@album.id) do |f| %>
   <legend>Edit Album</legend>
   <%= f.label :name %>
   <%= f.text_field :name %>

   <%= f.label :artist %>
   <%= f.text_field :artist %>

   <%= f.label :description %>
   <%= f.text_field :description %>

 <%= f.submit 'Save' %>
<% end %>
