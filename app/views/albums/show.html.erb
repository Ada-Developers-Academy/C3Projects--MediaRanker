<div class="container">
  <div class="row">
    <div class="col-med-12">
    
    <h1> <%= @album.name %> <small> Recorded by: <%= @album.artist %> </small> </h1>

    <h4> Ranked: <%= @album.vote %> </h4>

    <p> <%= @album.description %> </p>

    <br>
    <%= button_to "Upvote", "#{@album.id}/yes_vote", method: :patch %>
    <br>
    <%= button_to "Edit #{@album.name}", edit_album_path(@album.id), method: :get %>
    <br>
    <%= button_to "Delete", album_path(@album.id), method: :delete, data: {confirm: "are you sure you want to delete this album?"}  %>
    <br>
    <%= button_to "View All Albums", albums_path, method: :get %>
    <br>
    <%= button_to "View All Media", root_path, method: :get %>
    </div> 
  </div>
</div> 