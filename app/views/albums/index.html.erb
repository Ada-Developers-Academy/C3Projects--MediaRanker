<div class="col-lg-12">
  <table class="table table-hover">
    <tr>
      <th>Ranking</th>
      <th>Name</th>
      <th>Upvote</th>
    </tr>

    <% @albums.each do |album| %>
    <tr>
      <td>Ranked: <%= album.rank %></td>
      <td><%= link_to "#{album.name}", album_path(album.id) %></td>
      <td><%= button_to "Upvote", upvote_album_path(album.id), method: :patch, class: "btn btn-default"%></td>
    </tr>
    <% end %>
  </table>

  <p> <%= button_to "View All Media", root_path, method: :get, class: "btn btn-default" %> </p>
  <p> <%= button_to "Add an Album", new_album_path , method: :get, class: "btn btn-default" %> </p>
</div>
