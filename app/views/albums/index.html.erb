<%= render 'shared/header' %>

<table>
  <tr>
    <th>Ranking</th>
    <th>Name</th>
    <th>Upvote</th>
  </tr>

  <% @albums.each do |album| %>
    <tr>
      <td>Ranked: <%= album.rank %></td>
      <td><%= link_to "#{album.title}", album_path(album.id), method: "get" %></td>
      <td><%= button_to "Upvote", album_upvote_path(album.id), method: "patch" %></td>
    </tr>
  <% end %>

</table>

<%= button_to "View All Media", root_path, method: "get" %>
<%= button_to "Add an Album", new_album_path, method: "get" %>
