<table border "1">

<tr>
  <th>
    Rank
  </th>
  <th>
    Album Name
  </th>
  <th>
    Artist
  </th>
  <th>
    Description
  </th>

</tr>

<% @albums.each do |album| %>
  <tr>
    <td>
      <%= album.vote %>
    </td>
    <td>
      <%= link_to "#{album.name}", album_path(album.id) %>
    </td>
    <td>
      <%= album.description %>
    </td>
    <td>
      <%= album.vote %>
    </td>
  </tr>
  <% end %>

</table>
