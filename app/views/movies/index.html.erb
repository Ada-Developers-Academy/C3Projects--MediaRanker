<%= render partial: "media/header" %>

<%= params[:format] %>

<% if params[:format] == "movie" %>
  <%= render partial: "media/table", locals: { media: @movies, type: "movie", button_path: new_medium_path(:movie) } %>
<% elsif params[:format] == "book" %>
<%= render partial: "media/table", locals: { media: @books, type: "book", button_path: new_medium_path(:book) } %>
<% elsif params[:format] == "album" %>
<%= render partial: "media/table", locals: { media: @albums, type: "album", button_path: new_medium_path(:album) } %>
<% end %>
