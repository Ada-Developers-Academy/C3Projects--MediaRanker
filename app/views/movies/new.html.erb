<%= render :partial => "shared/header"  %>

<%= form_for @movie, url: movies_path("#{params[@movie.id]}") do |f| %>
    <legend>New Movie</legend>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :director %>
    <%= f.text_field :director %>

    <%= f.label :description %>
    <%= f.text_area :description %>

 <%= f.submit 'Save' %>
<% end %>
