<div class="container">
  <div class="row">
    <div class="col-med-12">
    
    <h1> <%= @movie.name %> <small> Directed by: <%= @movie.director %> </small> </h1>

    <h4> Ranked: <%= @movie.vote %> </h4>

    <p> <%= @movie.description %> </p>

    <br>
    <%= button_to "Upvote", "#{@movie.id}/yes_vote", method: :patch %>
    <br>
    <%= button_to "Edit #{@movie.name}", edit_movie_path(@movie.id), method: :get %>
    <br>
    <%= button_to "Delete", movie_path(@movie.id), method: :delete, data: {confirm: "are you sure you want to delete this movie?"}  %>
    <br>
    <%= button_to "View All Movies", movies_path, method: :get %>
    <br>
    <%= button_to "View All Media", root_path, method: :get %>
    </div> 
  </div>
</div>  
