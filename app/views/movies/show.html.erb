<%= render partial: 'shared/show', locals: { medium: @movie,
                                             created_alias: "Directed" } %>

<%= button_to "Upvote", movie_upvote_path(@movie), { method: :put, class: "btn btn-primary" } %>

<%= link_to "Edit #{@movie.title}", edit_movie_path(@movie), class: "btn btn-default" %>

<%= button_to "DELETE", @movie, { method: :delete, class: "btn btn-danger" } %>

<%= link_to "View All Movies", movies_path, class: "btn btn-default" %>

<%= link_to "View All Media", root_path, class: "btn btn-default" %>
