<%= form_for @video_game do |f| %>
  <%= f.label :title %>:
  <%= f.text_field :title, placeholder: "Chrono Trigger" %><br />

  <%= f.label :studio %>:
  <%= f.text_field :studio, placeholder: "Square" %><br />

  <%= f.label :description %>:
  <%= f.text_area :description, size: "50x10", placeholder: "Chrono Trigger is a console role-playing game. The game's story follows a group of adventurers who travel through time to prevent a global catastrophe." %><br />

  <%= f.submit  "Add Game"%>
<% end %>
