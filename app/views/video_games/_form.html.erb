<%= form_for item do |f| %>

<%= f.label :title, "#{title_desc}" %>
<%= f.text_field :title, class: "form_field", autofocus: true, placeholder: title_placeholder, value: title_value %>

<%= f.label :studio, "#{studio_desc}" %>
<%= f.text_field :studio, class: "form_field", placeholder: studio_placeholder, value: studio_value %>

<%= f.label :description, "#{description_desc}" %>
<%= f.text_area :description, size: "50x10", class: "form_field", placeholder: description_placeholder, value: description_value %>

<%= f.submit submit_button, class: "btn btn-primary" %>
<% end %>
