<%= form_for item do |f| %>

<%= f.label :title, "#{title_desc}" %>
<%= f.text_field :title, class: "form_field", required: true, autofocus: true, placeholder: title_placeholder, value: title_value %>
<%= f.label :description, "#{description_desc}" %>
<%= f.text_field :description, class: "form_field", placeholder: description_placeholder, value: description_value %>
<%= f.label :studio, "#{studio_desc}" %>
<%= f.text_field :studio, class: "form_field", placeholder: studio_placeholder, value: studio_value %>

<%= f.submit submit_button, class: "submit_button" %>
<% end %>
