<%= form_for media  do |f| %>
  <fieldset>
    <%= f.label :name %>
    <%= f.text_field :name, value: media.name, :required => true %>

    <%= f.label :author %>
    <%= f.text_field :author, value: media.author  %>

    <%= f.label :description %>
    <%= f.text_area :description, value: media.description  %>

  <section>
    <%= f.submit "Save" %>
  </section>
<% end %>
