<div class="container">
  <div class="row">
    <div class="col-lg-12">
    
    <h1> <%= @book.name %> <small> Written by <%= @book.author %> </small> </h1>

    <h4> Ranked: <%= @book.vote %> </h4>

    <p> <%= @book.description %> </p>

    <br>
    <%= button_to "Upvote", "#{@book.id}/yes_vote", method: :patch, :class => "btn btn-primary" %>
    <div class="button_wrapper">
        <%= link_to "Edit #{@book.name}", edit_book_path(@book.id), :class => " btn btn-default button_menu" %>
        <%= link_to "Delete", book_path(@book.id), method: :delete, data: {confirm: "are you sure you want to delete this book?"}, :class =>  "btn btn-danger button_menu"%>
        <%= link_to "View All Books", books_path, :class => "btn btn-default button_menu" %>
        <%= link_to "View All Media", root_path, :class => "btn btn-default button_menu" %>
    </div>
    </div> 
  </div>
</div> 

