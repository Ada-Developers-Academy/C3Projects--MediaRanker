<%= render 'shared/header' %>

<h1><%= @book.name %></h1>
<h2>Written by: <%= @book.author %></h2>
<h3>Ranked: <%= @book.rank %></h3>
<h4><%= @book.description %></h4>

<%= button_to "Upvote", upvote_book_path(@book) %>
<%= button_to "Edit #{@book.name}", edit_book_path, method: :get %>
<%= button_to "Delete", "/books/#{@book.id}", method: :delete, data: { confirm: "Are you sure you want to delete this?"} %>

