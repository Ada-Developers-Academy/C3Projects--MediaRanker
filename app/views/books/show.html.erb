<%= render partial: "shared/show.html.erb", locals: {object: @book, person_desc: "Written by: #{@book.author}" } %>

<%= link_to "Upvote Book", book_upvote_path(@book.id), method: :patch, class: "btn btn-success", role: "button" %>
<%= link_to "Edit Book", edit_book_path(@book.id), class: "btn btn-default", role: "button" %>
<%= link_to "Delete", book_path(@book.id), method: :delete, class: "btn btn-danger", role: "button" %>
<%= link_to "View All Books", books_path, class: "btn btn-default", role: "button" %>
<%= link_to "View All Media", root_path, class: "btn btn-default", role: "button" %>

