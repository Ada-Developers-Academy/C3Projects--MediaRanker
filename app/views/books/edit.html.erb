<%= render :partial => "shared/header"  %>

<%= form_for @book, url: book_path(@book.id) do |f| %>
   <legend>Edit Book</legend>
   <%= f.label :name %>
   <%= f.text_field :name %>

   <%= f.label :author %>
   <%= f.text_field :author%>

   <%= f.label :description %>
   <%= f.text_field :description %>

 <%= f.submit 'Save' %>
<% end %>
