<%= form_for @book, url: books_path("#{params[@book.id]}") do |f| %>
    <legend>New Book</legend>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :author %>
    <%= f.text_field :author %>

    <%= f.label :description %>
    <%= f.text_area :description %>

 <%= f.submit 'Save' %>
<% end %>
