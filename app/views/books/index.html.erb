<div class="col-lg-12">
  <table class="table table-hover" >
    <thead>
      <tr>
        <th>Ranking</th>
        <th>Book Name</th>
        <th>Upvote</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td>Ranked:<%= book.vote %></td>
        <td><%= link_to "#{book.name}", book_path(book.id) %></td>
        <td><%= button_to "Upvote", yes_vote_book_path(book.id), method: :patch, :class => "btn btn-default" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "View All Media", root_path, :class => "btn btn-default button_menu" %>
<%= link_to "Create a Book", new_book_path, :class => "btn btn-default button_menu" %>