<div class="col-lg-12">
  <table class="table table-hover">
    <tbody>
    <tr>
      <th>Ranking</th>
      <th>Name</th>
      <th>Upvote</th>
    </tr>
    <tbody>

    <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>Ranked: <%= book.rank %></td>
      <td><%= link_to "#{book.name}", book_path(book.id) %></td>
      <td><%= button_to "Upvote", upvote_book_path(book.id), method: :patch, class: "btn btn-default" %></td>
    </tr>
    <% end %>
  <tbody>
  </table>

  <p> <%= button_to "View All Media", root_path, method: :get, class: "btn btn-default"%> </p>
  <p> <%= button_to "Add a Book", new_book_path , method: :get, class: "btn btn-default" %> </p>
</div>
