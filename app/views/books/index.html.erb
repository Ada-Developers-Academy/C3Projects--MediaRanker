<table>
  <thead>
    <tr>
      <th>Votes</th>
      <th>Name</th>
      <th>Upvote</th>
    </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.vote %></td>
      <td><%= link_to book.name, book_path(book.id) %></td>
      <td><%= button_to "Upvote", upvote_book_path(book.id) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
