<table class="table table-hover">
  <thead>
    <tr>
      <th>Votes</th>
      <th>Name</th>
      <th>Upvote</th>
    </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td>Votes: <%= book.vote %></td>
      <td><%= link_to book.name, book_path(book.id) %></td>
      <td><%= button_to "Upvote", upvote_book_path(book.id), class: "btn btn-default" %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to "View All Media", root_path, class: "btn btn-default", method: :get %>
<%= link_to "Add a Book", new_book_path, class: "btn btn-default", method: :get %>
