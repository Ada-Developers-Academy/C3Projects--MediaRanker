<%= render "shared/header" %>
<table>
  <tr>
    <th>Ranking</th>
    <th>Name</th>
    <th>Upvote</th>
  </tr>

  <% @books.each do |book| %>
  <tr>
    <td><%= book.rank %></td>
    <td><%= link_to "#{book.name}", book_path(book.id) %></td>
    <td><%= button_to "Upvote", upvote_book_path(book.id), method: :patch %></td>
  </tr>
  <% end %>
</table>

<p> <%= button_to "View All Media", root_path, method: :get %> </p>
<p> <%= button_to "Add a Book", new_book_path , method: :get %> </p>
