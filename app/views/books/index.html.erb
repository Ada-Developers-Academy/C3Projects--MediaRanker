<%= render 'shared/header' %>

<table>
  <tr>
    <th>Ranking</th>
    <th>Name</th>
    <th>Upvote</th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td>Ranked: <%= book.rank %></td>
      <td><%= link_to "#{book.title}", book_path(book.id), method: "get" %></td>
      <td><%= button_to "Upvote", book_upvote_path(book.id), method: "patch" %></td>
    </tr>
  <% end %>

</table>

<%= button_to "View All Media", root_path, method: "get" %>
<%= button_to "Add a Book", new_book_path, method: "get" %>
