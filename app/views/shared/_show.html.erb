<h1><%= media.name %></h1>
<h2> <%= media_creation_verb %> by: <%= creator %></h2>
<h4>Ranked: <%= media.rank %></h4>
<p><%= media.description %></p>

<%= link_to "Upvote", upvote_path, method: :patch %>

<%= link_to "Edit #{media.name}", editmedia_path %>
<%= link_to "Delete", deletemedia_path, method: :delete, data: { confirm: "Are you sure?"} %>

<%= link_to "View All #{media_name}", mediapath %>
<%= link_to "View All Media", root_path %>