<div class="row">
  <div class="col-lg-12">
    <h1> <%= object.name %> <%= creator %> </h1>

    <h4>Ranked: <%= object.ranking %> </h4>

    <p> <%= object.description %> </p>

    <%= button_to "Upvote", polymorphic_path(object), method: "patch", class: "btn btn-primary" %>
    <br>
    <%= link_to "Edit #{object.name}", edit_polymorphic_path(object), class: "btn btn-default" %>
    <%= link_to "Delete", polymorphic_path(object), method: "delete", data: { confirm: "Are you sure you want to delete?" }, class: "btn btn-danger" %>

    <%= link_to "View All #{media_name}s", polymorphic_path(object.class), class: "btn btn-default" %>
    <%= link_to "View All Media", root_path, class: "btn btn-default" %>
  </div>
</div>
