<%= form_for @book, url: book_path, method: :patch do |f| %>
  <fieldset>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :author %>
    <%= f.text_field :author %>

    <%= f.label :description%>
    <%= f.text_field :description %>

    <%= f.label :rank %>
    <%= f.text_field :rank %>

  </fieldset>
    <%= f.submit 'Save' %>
<% end %>
