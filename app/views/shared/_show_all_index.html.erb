<table>
  <tr>
    <th>
      Ranking
    </th>
    <th>
      Name
    </th>
    <th>
      Upvote
    </th>
  </tr>
  <% media.each do |medium| %>
    <tr>
      <td>
      <%= medium.rank %>
      </td>
      <% if medium.class == Movie %>
        <td>
          <%= link_to "#{medium.title}", movie_path(id: medium.id) %>
        </td>
        <td>
          <%= button_to "Upvote", movie_path(id: medium.id), method: :put %>
        </td>
      <% elsif medium.class == Book %>
        <td>
          <%= link_to "#{medium.title}", book_path(id: medium.id) %>
        </td>
        <td>
          <%= button_to "Upvote", book_path(id: medium.id), method: :put %>
        </td>
      <% elsif medium.class == Album %>
        <td>
          <%= link_to "#{medium.title}", album_path(id: medium.id) %>
        </td>
        <td>
          <%= button_to "Upvote", album_path(id: medium.id), method: :put %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>

<%= link_to "View all Media", root_path %>
<% if type == "movie" %>
  <%= link_to "Add a Movie", new_movie_path %>
<% elsif type == "book" %>
  <%= link_to "Add a Book", new_book_path %>
<% elsif type = "album" %>
  <%= link_to "Add an Album", new_album_path %>
<% end %>
