<div class="row">
  <div class="col-md-4">
    <h1>Top Movies</h1>
    <% @movies.each do |movie| %>
      <h2><%= link_to "#{movie.title}", movie_path(id: movie.id) %>
        <small>Ranked: <%= movie.rank %></small></h2>
    <% end %>
    <%= link_to "View more movies", movies_path %>
  </div>

  <div class="col-md-4">
    <h1>Top Books</h1>
    <% @books.each do |book| %>
      <h2><%= link_to "#{book.title}", book_path(id: book.id) %>
        <small>Ranked: <%= book.rank %></small></h2>
    <% end %>
    <%= link_to "View more books", books_path %>
  </div>

  <div class="col-md-4">
    <h1>Top Albums</h1>
    <% @albums.each do |album| %>
      <h2><%= link_to "#{album.title}", album_path(id: album.id) %>
        <small>Ranked: <%= album.rank %></small></h2>
    <% end %>
    <%= link_to "View more albums", albums_path %>
  </div>
</div>
