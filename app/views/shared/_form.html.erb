<% unless @errors.nil? %>
  <%= @errors %>
<% end %>


<%= form_for media, method: method, url: url do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :creator, creator %>
  <%= f.text_field :creator %>

  <%= f.hidden_field :format, value: pick_format %>

  <%= f.submit submit_type(method) %>


<% end %>