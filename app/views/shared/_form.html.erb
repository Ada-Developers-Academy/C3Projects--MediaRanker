<h2>
  <% if current_page?(action: 'new') %>
    <%= "New #{@media.class.name}" %>
  <% elsif current_page?(action: 'edit') %>
    <%= "Edit #{@media.name}" %>
  <% end %>
</h2>

<!-- error message field won't actually populate due to html's 'required: true' on :name field, but... I thought it was fancy to include anyway -->
<% if @media.errors.any? %>
  <div class="error_explanation">
    <h4><%= pluralize(@media.errors.count, "error") %></h4>
    <ul>
      <% @media.errors.full_messages.each do |message| %>
        <li> <%= message %> </li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @media, html: {class: "form"} do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label @creator %>
    <%= f.text_field @creator, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <%= f.submit class: "btn btn-default" %>

<% end %>
