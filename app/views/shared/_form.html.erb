<pre>
  <%= params %>
</pre>

<h2>
  <% if current_page?(action: 'new') %>
    <%= "New #{@media.class.name}" %>
  <% elsif current_page?(action: 'edit') %>
    <%= "Edit #{@media.name}" %>
  <% end %>
</h2>
<%= form_for @media do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label @creator %>
  <%= f.text_field @creator %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit %>

<% end %>
