<div class="row">
  <h1><%= verb %> <%= media_type %></h1>

  <%= form_for media, html: { class: "form"} do |f| %>
    <fieldset>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label creator_type %>
        <%= f.text_field creator_type, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control" %>
      </div>
    </fieldset>

    <%= f.submit 'Save', class: "btn btn-default" %>

  <% end %>
</div>
