<% unless @errors.nil? %>
  <%= @errors %>
<% end %>


<%= form_for media, html: {class: "form-inline form-center"}, method: method, url: url do |f| %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="form-group">
    <%= f.label :creator, creator %>
    <%= f.text_field :creator %>
  </div>

  <%= f.hidden_field :format, value: pick_format %>

  <%= f.submit submit_type(method), class: "btn btn-default btn_green" %>


<% end %>