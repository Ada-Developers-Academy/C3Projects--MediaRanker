<ul class="no-list-style">
  <% medium.errors.each do |column, message| %>
  <li class="alert alert-danger" role="alert">
    <strong><span class="glyphicon glyphicon-exclamation-sign"></span> <%= column.capitalize %> </strong> <%= message %>
  </li>
  <% end %>
</ul>

<%= form_for medium, html: { class: "form" } do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label creator %>
    <%= f.text_field creator, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control", rows: "5" %>
  </div>

  <%= f.submit "Save", class: "btn btn-primary" %>
<% end %>
