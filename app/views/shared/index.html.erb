<table class="table table-hover">
  <tbody>
    <tr>
      <th>Ranking</th>
      <th>Name</th>
      <th>Upvote</th>
    </tr>
    <% @media.each do |medium| %>
      <tr>
        <td>Ranked: <%= medium.rank %></td>
        <td><%= link_to medium.title, polymorphic_path(medium) %></td>
        <td><%= button_to "Upvote", polymorphic_path([:upvote, medium]), { method: :put, class: "btn btn-default" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "View All Media", root_path, class: "btn btn-default" %>

<%= link_to "Add #{article} #{controller_name[0..-2].capitalize}", new_polymorphic_path(medium_symbol), class: "btn btn-default" %>
