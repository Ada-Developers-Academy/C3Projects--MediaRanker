<div class="col-lg-12">
  <table class="table table-hover">
    <tr>
      <th>
        Ranking
      </th>
      <th>
        Name
      </th>
      <th>
        Upvote
      </th>
    </tr>
    <% media.each do |medium| %>
      <tr>
        <td>
        <%= medium.rank %>
        </td>
        <% if medium.class == Movie %>
          <td>
            <%= link_to "#{medium.title}", movie_path(id: medium.id) %>
          </td>
          <td>
            <%= button_to "Upvote", movie_path(id: medium.id), method: :put, class: "btn btn-default" %>
          </td>
        <% elsif medium.class == Book %>
          <td>
            <%= link_to "#{medium.title}", book_path(id: medium.id) %>
          </td>
          <td>
            <%= button_to "Upvote", book_path(id: medium.id), method: :put, class: "btn btn-default" %>
          </td>
        <% elsif medium.class == Album %>
          <td>
            <%= link_to "#{medium.title}", album_path(id: medium.id) %>
          </td>
          <td>
            <%= button_to "Upvote", album_path(id: medium.id), method: :put, class: "btn btn-default" %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </table>

  <%= link_to "View all Media", root_path, class: "btn btn-default" %>
  <%= link_to "Add a #{type}", new_path, class: "btn btn-default" %>
</div>
