<div class="row">
  <div class="col-sm-8">
  <table class="table table-hover">
    <tr>
      <th>Ranking</th>
      <th>Name</th>
      <th>Upvote</th>
    </tr>

    <% @media.each do |media| %>
    <tr>
      <td> Ranked: <%= media.rank %> </td>
      <td> <%= link_to "#{media.name}", send(media_path, media) %></td>
      <td> <%= button_to "Upvote", send(upvote_path, media), method: "patch", class: "btn btn-default" %> </td>
    </tr>
    <% end %>
  </table>

  <%= link_to "View All Media", root_path, class: "btn btn-default" %>
  <%= link_to "Add #{media_name}", send(new_path), class: "btn btn-default" %>
  </div>
</div>
