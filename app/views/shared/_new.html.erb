<%= form_for object do |f| %>

<fieldset>
  <legend><%= "#{object.class} Details" %></legend>
  <%= f.label :name, "Name: " %>
  <%= f.text_field :name, :required => true %>

  <%= f.label person %>
  <%= f.text_field person %>

  <%= f.label :description, "Description: " %>
  <%= f.text_field :description %>

  <%= f.label :rank, "Rank: " %>
  <%= f.number_field :rank %>

</fieldset>
  <%= f.submit "Add #{object.class}" %>
<% end %>
