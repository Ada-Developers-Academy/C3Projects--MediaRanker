<h1><%= verb %> <%= media_type %></h1>

<%= form_for media do |f| %>
  <fieldset>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label creator_type %>
    <%= f.text_field creator_type %>

    <%= f.label :description %>
    <%= f.text_area :description %>
  </fieldset>

  <%= f.submit 'Save' %>

<% end %>
