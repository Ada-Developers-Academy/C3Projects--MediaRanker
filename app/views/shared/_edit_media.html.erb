<h2>
  <%= @action %> <%= medium.class %>
</h2>
<%= form_for medium do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label created_by %>
    <%= f.text_field creator, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: "form-control" %>
  </div>
  <%= f.submit "Save", class: "btn btn-default" %>
<% end %>
